AC_TRY_COMPILE([],[],[ac_have_no_deprecated_register='yes';AC_SUBST(WARN_REG_OPTS,"-Wno-deprecated-register")],[ac_have_no_deprecated_register='no';AC_SUBST(WARN_REG_OPTS,"")])
AC_MSG_RESULT($ac_have_no_deprecated_register)
