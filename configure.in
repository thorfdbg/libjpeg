AC_LANG(C++)
AC_MSG_CHECKING([for the -Wno-class-memaccess compiler switch])
CXXFLAGS="-Werror -Wno-class-memaccess $save_CXXFLAGS"
AC_TRY_COMPILE([],[],[ac_have_no_class_memaccess='yes';AC_SUBST(WARN_MEM_OPTS,"-Wno-class-memaccess")],[ac_have_no_class_memaccess='no';AC_SUBST(WARN_MEM_OPTS,"")])
AC_MSG_RESULT($ac_have_no_class_memaccess)
CXXFLAGS="$save_CXXFLAGS"
AC_LANG(C)
